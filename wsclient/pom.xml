<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.hpccsystems</groupId>
  <artifactId>wsclient</artifactId>
  <packaging>jar</packaging>
  <name>HPCC Web Services Client API</name>
  <description>This project allows a user to interact with ESP services in a controlled manner. The API calls available under org.hpccsystems.ws.client.platform allow for a user to target ESP's across multiple environments running a range of hpccsystems-platform versions. There is no guarantee that if a user utilizes org.hpccsystems.ws.client.gen generated stub code from wsdl, that the calls will be backwards compatible with older hpccsystems-platform versions.</description>

  <parent>
    <groupId>org.hpccsystems</groupId>
    <artifactId>HPCC-JAPIs</artifactId>
    <version>7.4.12-SNAPSHOT</version>
  </parent>

  <properties>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>${maven.assembly.version}</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-gpg-plugin</artifactId>
        <version>${maven.gpg.version}</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven.compiler.version}</version>
        <configuration>
          <excludes>
            <exclude>org/hpccsystems/ws/client/gen/extended/wssql/v1_0/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/extended/wssql/v3_03/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/extended/wssql/v3_04/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/filespray/v1_06/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/filespray/v1_13/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/filespray/v1_15/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/filespray/v1_16/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsdfu/v1_24/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsdfu/v1_29/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsdfu/v1_34/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsdfu/v1_36/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsdfu/v1_38/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsesdlconfig/v1_0/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsesdlconfig/v1_2/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsesdlconfig/v1_3/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsfileio/v0_0/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wssmc/v1_19/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wssmc/v1_2/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wstopology/v1_19/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wstopology/v1_23/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wstopology/v1_25/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wstopology/v1_26/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wstopology/v1_27/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsworkunits/v1_46/**/*</exclude>
            <!-- As of 7.2.0 v156, v158, v162, v169 required for backward compatibility -->
            <!-- <exclude>org/hpccsystems/ws/client/gen/wsworkunits/v1_56/**/*</exclude>-->
            <!-- <exclude>org/hpccsystems/ws/client/gen/wsworkunits/v1_58/**/*</exclude>-->
            <!-- <exclude>org/hpccsystems/ws/client/gen/wsworkunits/v1_62/**/*</exclude>-->
            <!-- <exclude>org/hpccsystems/ws/client/gen/wsworkunits/v1_69/**/*</exclude>-->
            <exclude>org/hpccsystems/ws/client/gen/wsworkunits/v1_71/**/*</exclude>
            <exclude>org/hpccsystems/ws/client/gen/wsworkunits/v1_73/**/*</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.antlr</groupId>
        <artifactId>antlr4-maven-plugin</artifactId>
        <version>${antlr.version}</version>
        <executions>
          <execution>
            <id>build-latest</id>
            <goals>
              <goal>antlr4</goal>
            </goals>
            <configuration>
              <sourceDirectory>${project.basedir}/src/main/java/org/hpccsystems/ws/client/antlr</sourceDirectory>
              <outputDirectory>${project.basedir}/src/main/java/org/hpccsystems/ws/client/antlr</outputDirectory>
              <arguments>
                <argument>-package</argument>
                <argument>org.hpccsystems.ws.client.antlr</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${maven.surefire.version}</version>
        <configuration>
          <argLine>${argLine}</argLine>
          <excludes>
            <exclude>**/HPCCWsWorkUnitsClientTest.java</exclude>
            <exclude>**/EclParseRegressionTest.java</exclude>
            <exclude>**/RampsDevRegressionTest.java</exclude>
            <exclude>**/*IntegrationTest.java</exclude>
            <exclude>**/*IntegrationTest_620.java</exclude>
            <exclude>**/*IntegrationTest_54.java</exclude>
            <exclude>**/WSFileIOClientTest.java</exclude>
            <exclude>**/WUQueryTest.java</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>remote-test</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>${maven.surefire.version}</version>
            <configuration combine.self="override">
              <argLine>${argLine}</argLine>
              <includes>
                <!-- currently not setup as a test, won't execute -->
                <include>**/PlatformTester.java</include> 
              </includes>
              <excludes>
                <exclude>**/ManualUnitTest.java</exclude>
                <exclude>**/DFUFileDetailInfoTest.java</exclude>
                <exclude>**/EclParseRegressionTest.java</exclude>
                <exclude>**/RampsDevRegressionTest.java</exclude>
                <exclude>**/Accounts.java</exclude>
                <exclude>**/Persons.java</exclude>
                <exclude>**/RecordDefinitions.java</exclude>
                <exclude>**/PlatformTester.java</exclude>
                <exclude>**/SerializeTester.java</exclude>
                <exclude>**/WSFileIOClientTest.java</exclude>
                <exclude>**/WUQueryTest.java</exclude>
                <exclude>**/*IntegrationTest.java</exclude>
                <exclude>**/*IntegrationTest_620.java</exclude>
                <exclude>**/*IntegrationTest_54.java</exclude>
              </excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>integrationtests</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>${maven.surefire.version}</version>
            <configuration combine.self="override">
              <argLine>${argLine}</argLine>
              <excludes>
                <exclude>**/HPCCWsWorkUnitsClientTest.java</exclude>
                <exclude>**/ManualUnitTest.java</exclude>
                <exclude>**/DFUFileDetailInfoTest.java</exclude>
                <exclude>**/EclParseRegressionTest.java</exclude>
                <exclude>**/RampsDevRegressionTest.java</exclude>
                <exclude>**/Accounts.java</exclude>
                <exclude>**/Persons.java</exclude>
                <exclude>**/RecordDefinitions.java</exclude>
                <exclude>**/PlatformTester.java</exclude>
                <exclude>**/SerializeTester.java</exclude>
                <exclude>**/RemoteTest.java</exclude>
                <exclude>**/WSFileIOClientTest.java</exclude>
                <exclude>**/WUQueryTest.java</exclude>
              </excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>release</id>
      <properties>
        <maven.gpg.skip>false</maven.gpg.skip>
        <maven.test.skip>true</maven.test.skip>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>${maven.javadoc.version}</version>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-source-plugin</artifactId>
            <version>${maven.source.version}</version>
          </plugin>
          <plugin>
            <groupId>org.sonatype.plugins</groupId>
            <artifactId>nexus-staging-maven-plugin</artifactId>
            <version>${sonatype.staging.version}</version>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>jenkins</id>
      <properties>
        <maven.gpg.skip>false</maven.gpg.skip>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>${maven.javadoc.version}</version>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-source-plugin</artifactId>
            <version>${maven.source.version}</version>
          </plugin>
          <plugin>
            <groupId>org.sonatype.plugins</groupId>
            <artifactId>nexus-staging-maven-plugin</artifactId>
            <version>${sonatype.staging.version}</version>
          </plugin>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>${maven.surefire.version}</version>
            <configuration combine.self="override">
              <argLine>${argLine}</argLine>
              <excludes>
                <exclude>**/*IntegrationTest.java</exclude>
                <exclude>**/*IntegrationTest_620.java</exclude>
                <exclude>**/*IntegrationTest_54.java</exclude>
              </excludes>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>${maven.gpg.version}</version>
            <configuration>
              <useAgent>true</useAgent>
              <gpgArguments>
                <arg>--batch</arg>
                <arg>--pinentry-mode</arg>
                <arg>loopback</arg>
              </gpgArguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
